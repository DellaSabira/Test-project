<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" >
    <title>Login Page</title>

</head>
<body>
    

    <div class="container ml-auto">
        <form class="mt-5" action="/" method="POST">
            <h3> please enter your information </h3>
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label" name="username" >Name  </label>
              <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="input">
             
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label" name="password">Password</label>
              <input type="password" class="form-control" id="exampleInputPassword1">
            </div>
           
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
    </div>

   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" ></script>
</body>
</html>